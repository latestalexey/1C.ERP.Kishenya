		Возврат;
	КонецЕсли;
	
	Текст = "
	|////////////////////////////////////////////////////////////////////////////////
	|// Временная таблица втТаблицаПоДокументу
	|"+
	"ВЫБРАТЬ
	|	втТаблицаПоДокументу.Ссылка КАК Ссылка,
	|	втТаблицаПоДокументу.НомерСтроки КАК НомерСтроки,
	|	втТаблицаПоДокументу.ОсновноеСредство КАК ОбъектУчета,
	|	втТаблицаПоДокументу.Ссылка.Организация КАК Организация,
	|	втТаблицаПоДокументу.Ссылка.Подразделение КАК Подразделение,
	|	ЕСТЬNULL(втТаблицаПоДокументу.ОсновноеСредство.НаправлениеДеятельности, ЗНАЧЕНИЕ(Справочник.НаправленияДеятельности.ПустаяСсылка)) КАК НаправлениеДеятельности,
	|	втТаблицаПоДокументу.Стоимость КАК Стоимость,
	|	втТаблицаПоДокументу.СтоимостьДляВычисленияАмортизацииБУ КАК СтоимостьДляВычисленияАмортизацииБУ
	|ПОМЕСТИТЬ втТаблицаПоДокументу
	|ИЗ
	|	Документ.ПереоценкаОС.ОС КАК втТаблицаПоДокументу
	|ГДЕ
	|	втТаблицаПоДокументу.Ссылка = &Ссылка
	|
	|ИНДЕКСИРОВАТЬ ПО
	|	втТаблицаПоДокументу.ОсновноеСредство,
	|	Организация,
	|	Подразделение"+";";
	
	ТекстыЗапроса.Добавить(Текст, ИмяТаблицы, Ложь);
	
