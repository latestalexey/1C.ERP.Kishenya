				Строка.ДефицитМатериалов = 2;
				Прервать;
			ИначеЕсли СтрокаМатериалМЛ.ДефицитМатериалов = 1 Тогда
				Строка.ДефицитМатериалов = 1;
			КонецЕсли;
		КонецЦикла;
		
	КонецЦикла;
	
