	КонецЕсли;
	
	ОкончаниеПериода = Макс(ОкончаниеПериода,  ОкончаниеИнтервалаПланирования(НачалоПериода, ИнтервалПланирования));
	
	ТекущееНачалоПериода = НачалоПериода;
