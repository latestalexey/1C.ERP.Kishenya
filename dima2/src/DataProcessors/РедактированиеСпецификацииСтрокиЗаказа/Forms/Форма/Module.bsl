	ПараметрыФормы.Вставить("ДатаОкончанияДействияРазрешений",НачалоДня(Объект.ДатаПотребности));
	
	ПараметрыФормы.Вставить("ЗаказНаПроизводство",			Объект.Ссылка);
	ПараметрыФормы.Вставить("Изделие",						Объект.Номенклатура);
	ПараметрыФормы.Вставить("ХарактеристикаИзделия",		Объект.Характеристика);
	
	ПараметрыФормы.Вставить("КлючСвязиСпецификация",		ТекущиеДанные.КлючСвязиСпецификация);
	
	ПараметрыФормы.Вставить("Материал",						ТекущиеДанные.Номенклатура);
	ПараметрыФормы.Вставить("ХарактеристикаМатериала",		ТекущиеДанные.Характеристика);
	ПараметрыФормы.Вставить("УпаковкаМатериала",			ТекущиеДанные.Упаковка);
	ПараметрыФормы.Вставить("КоличествоУпаковокМатериала",	ТекущиеДанные.КоличествоУпаковок);
	ПараметрыФормы.Вставить("КоличествоМатериала",			ТекущиеДанные.Количество);
	
	ПараметрыФормы.Вставить("ЗаказатьНаСклад",				ТекущиеДанные.ЗаказатьНаСклад);
	
	ДополнитьПараметрыНаСервере(ПараметрыФормы, ТекущиеДанные.КлючСвязиЭтапы);
	
	ОткрытьФорму("Обработка.РедактированиеСпецификацииСтрокиЗаказа.Форма.ФормаВыбораАналога", ПараметрыФормы, ЭтаФорма);
	
