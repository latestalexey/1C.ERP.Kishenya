	Представление = "";
	ВидовВремени = 0;
	Для Каждого Строка Из Форма.ДополнительныеВидыВремени Цикл
		Если ВидовВремени = 2 Тогда
			Прервать;
		КонецЕсли;
		Представление = Представление + Строка(Строка.ВидВремени) + ", ";
		ВидовВремени = ВидовВремени + 1;
	КонецЦикла;
	СтроковыеФункцииКлиентСервер.УдалитьПоследнийСимволВСтроке(Представление, 2);
	
	Если ВидовВремени < Форма.ДополнительныеВидыВремени.Количество() Тогда
		Представление = Представление + " " + СтрШаблон(НСтр("ru='и еще %1';uk='і ще %1'"), Форма.ДополнительныеВидыВремени.Количество() - ВидовВремени);
	КонецЕсли;
	
	Если ПустаяСтрока(Представление) Тогда
		Представление = НСтр("ru='<Не выбраны>';uk='<Не обрані>'");
	КонецЕсли;
	
	Форма.Элементы.ВидыВремени.Заголовок = СтрШаблон(НСтр("ru='Дополнительные виды времени (%1)';uk='Додаткові види часу (%1)'"), Представление);
	
