		СостояниеИспользованияВУчетнойПолитике = НСтр("ru=' Не используется';uk=' Не використовується'");
		Элементы.НастроитьИспользованиеВУчетнойПолитике.Заголовок = НСтр("ru='Настроить';uk='Настроїти'");
