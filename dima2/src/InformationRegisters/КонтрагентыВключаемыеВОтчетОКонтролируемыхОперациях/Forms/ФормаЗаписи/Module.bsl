
&НаСервере
Процедура ПриСозданииНаСервере(Отказ, СтандартнаяОбработка)
	
	Если Параметры.Ключ.Период = '0001-01-01' Тогда	
	
		Если    НЕ Параметры.ЗначенияЗаполнения.Свойство("Организация")
			ИЛИ НЕ ЗначениеЗаполнено(Параметры.ЗначенияЗаполнения.Организация) ТОгда
			Отказ = Истина;
		Иначе	
			Запись.Организация = Параметры.ЗначенияЗаполнения.Организация;
		КонецЕсли;
		
		Если    НЕ Параметры.ЗначенияЗаполнения.Свойство("Период")
			ИЛИ НЕ ЗначениеЗаполнено(Параметры.ЗначенияЗаполнения.Период) ТОгда
			Отказ = Истина;
		Иначе
			Запись.Период = Параметры.ЗначенияЗаполнения.Период;
		КонецЕсли;
		
	КонецЕсли;	
	
	Если Отказ Тогда
		Сообщить(НСтр("ru='Не указана Организация и/или год';uk='Не вказана Організація і/або рік'"));
	КонецЕсли;
	
КонецПроцедуры
