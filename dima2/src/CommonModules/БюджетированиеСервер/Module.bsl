			Правило["ЗначениеАналитики" + НомерАналитики]                    = СтрокаНастройки.ЗначениеАналитики;
			Правило["ЗаполнятьУказаннымЗначениемАналитику" + НомерАналитики] = СтрокаНастройки.ЗаполнятьУказаннымЗначением;
