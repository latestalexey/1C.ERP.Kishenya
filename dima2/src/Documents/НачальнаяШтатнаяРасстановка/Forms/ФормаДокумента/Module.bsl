		Возврат Формат(СтрокаСотрудника.Аванс, "ЧДЦ=0; ЧН=") + "%";
			
	Иначе
		
		Возврат Формат(СтрокаСотрудника.Аванс, "ЧДЦ=0; ЧН=");
		
	КонецЕсли; 
	
